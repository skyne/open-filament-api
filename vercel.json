{
  "version": 2,
  "buildCommand": "cd apps/frontend-web && npx next build",
  "outputDirectory": "apps/frontend-web/.next",
  "devCommand": "nx serve frontend-web", 
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "apps/api-service/src/vercel.ts": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/api-service/src/vercel.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri"
  }
}
