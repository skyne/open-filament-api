{
  "name": "@open-filament-api/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "npm run docker:up && sleep 5 && npm run dev",
    "start:prod": "npm run docker:up && sleep 5 && npm run build && npm run serve:prod",
    "dev": "npx concurrently \"npm run serve:api\" \"npm run serve:frontend\"",
    "serve:api": "nx serve api-service",
    "serve:frontend": "nx serve frontend-web",
    "serve:prod": "npx concurrently \"npm run serve:api:prod\" \"npm run serve:frontend:prod\"",
    "serve:api:prod": "node dist/apps/api-service/main.js",
    "serve:frontend:prod": "npm run serve:frontend",
    "build": "npx nx run-many --target=build --projects=api-service,frontend-web",
    "build:frontend": "nx build frontend-web --prod",
    "build:api": "nx build api-service --prod",
    "test": "nx test api-service",
    "docker:up": "docker compose up -d mongodb",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f mongodb",
    "docker:reset": "docker compose down -v && docker compose up -d mongodb"
  },
  "private": true,
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/sensible": "^6.0.3",
