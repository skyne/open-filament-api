    "@vercel/node": "^5.3.7",
    "axios": "^1.6.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "mongodb-memory-server": "^10.1.3",
    "mongoose": "^8.9.3",
    "next": "^15.4.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "^21.3.9",
    "@nx/eslint": "^21.3.9",
    "@nx/eslint-plugin": "^21.3.9",
    "@nx/jest": "^21.3.9",
    "@nx/js": "^21.3.9",
    "@nx/next": "^21.3.9",
